{
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    "helpers:pinGitHubActionDigests"
  ],
  "timezone": "Asia/Tokyo",
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch", "minor", "pin", "digest"],
      "groupName": "devDependencies (non-major)",
      "automerge": true
    }
  ],
  "includeForks": true
}
